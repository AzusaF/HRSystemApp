      <div class="row">
         <div class="col-md-12">
        
            <h2>Log In</h2>

            <br />
            {{#if errorMessage}}
            <div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div>
            {{/if}}
            <form action="/login" method="post">
               <fieldset>
                  <div class="row">
                     <div class="col-md-12">
                        <div class="form-group">
                           <input class="form-control" placeholder="User Name" name="userName" type="text" required />
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-12">
                        <div class="form-group">
                           <input class="form-control" placeholder="Password" name="password" type="password" required />
                        </div>
                     </div>
                  </div>
               </fieldset>
    
               <hr />

               <input type="submit" class="btn btn-primary pull-right" value="Login" text="Login"/><br /><br /><br />
    
            </form>
         </div>
      </div>
    