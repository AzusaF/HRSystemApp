<div class="row">
   <div class="col-md-12">
      <h2>Departments{{#if session.user.isAdmin}}
                     <a href="/departments/add" class="btn btn-success pull-right">Add New Department</a>
                     {{/if}}</h2>
      <hr />
         <div class="table-responsive">
            <table class="table ">
               <thead>
                  <tr>
                     <th>Department ID</th>
                     <th>Department Name</th>
                  </tr>
               </thead>
               {{#if session.user.isAdmin}}
               {{#each departments}}
               <tbody>
                  <tr>
                     <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                     <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
                     <td><a href="/departments/delete/{{departmentId}}" class="btn btn-danger">remove</a></td>
                  </tr>
               </tbody>
               {{/each}}
               {{else}}
               {{#each departments}}
               <tbody>
                  <tr>
                     <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                     <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
                  </tr>
               </tbody>
               {{/each}}
               {{/if}}
            </table>
            {{#unless departments}}
               <div class="col-md-12 text-center">
                  <strong>{{message}}</strong>
               </div>
            {{/unless}}
         </div>         
   </div>
</div>